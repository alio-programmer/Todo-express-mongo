<%- include("./partials/header.ejs") %>
<body>
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">TODO</span>
    </div>
  </nav>
  <div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
      <input
        type="text"
        name="todo"
        class="form-control"
        placeholder="Enter task"
      />
      <input type="submit" value="ADD" class="btn btn-md btn-primary mx-2" />
    </form>

    <ul class="list-group my-5">
      <% todo.forEach(todos=>{ %>
      <li class="list-group-item"><%= todos.todo %></li>
      <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm"
        >Delete</a
      >
      <% }) %>
    </ul>
  </div>
  <%- include("./partials/footer.ejs") %>
</body>
